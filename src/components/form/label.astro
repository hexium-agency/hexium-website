---
interface Props {
  for: string;
  optional?: boolean;
  renderAsLabel?: boolean;
}

const { for: htmlFor, optional, renderAsLabel = true } = Astro.props;

const Element = renderAsLabel ? 'label' : 'div';
const elementProps = renderAsLabel ? { for: htmlFor } : {};
---

<Element {...elementProps} class="mb-1 flex items-center gap-2 text-sm font-medium text-gray-950">
  <slot />
  {
    optional && (
      <span class="text-2xs/[0.875rem] rounded bg-gray-200 px-1.5 py-0.5 tracking-[0.015em] text-gray-800 ring-1 ring-gray-950/5 ring-inset">
        Optionnel
      </span>
    )
  }
</Element>
