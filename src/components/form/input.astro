---
interface Props {
  type?: 'text' | 'email' | 'tel';
  id: string;
  name: string;
  required?: boolean;
}

const { type = 'text', id, name, required = false } = Astro.props;
---

<input
  type={type}
  id={id}
  name={name}
  required={required}
  class="h-10 w-full rounded-md border-[0.5px] border-gray-300 bg-white px-3 shadow transition-all duration-300 ease-[cubic-bezier(0.4,0.36,0,1)] focus:border-gray-900 focus:outline-none focus:ring-1 focus:ring-gray-900 text-sm hover:border-gray-400"
/> 