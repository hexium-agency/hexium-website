---
interface Props {
  type?: 'text' | 'email' | 'tel';
  id: string;
  name: string;
  required?: boolean;
}

const { type = 'text', id, name, required = false } = Astro.props;
---

<input
  type={type}
  id={id}
  name={name}
  required={required}
  class="input-field h-10 w-full rounded-md border-[0.5px] border-gray-300 bg-white px-3 text-sm shadow outline-none hover:bg-white/50"
/>

