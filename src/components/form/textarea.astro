---
interface Props {
  id: string;
  name: string;
  required?: boolean;
  rows?: number;
}

const { id, name, required = false, rows = 4 } = Astro.props;
---

<textarea
  id={id}
  name={name}
  rows={rows}
  required={required}
  class="w-full rounded-md border-[0.5px] border-gray-300 bg-white px-3 py-2 shadow transition-all duration-300 ease-[cubic-bezier(0.4,0.36,0,1)] focus:border-gray-900 focus:outline-none focus:ring-1 focus:ring-gray-900 hover:border-gray-400 text-sm"
></textarea> 