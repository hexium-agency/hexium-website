---
import type { NavbarColumnStoryblok } from '@/types/storyblok';
import { storyblokEditable } from '@storyblok/astro';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';
interface AstroProps {
  blok: NavbarColumnStoryblok;
}

const { blok } = Astro.props as AstroProps;
---

<div {...storyblokEditable(blok)}>
  <div
    class="px-3 py-1.5 text-[0.650rem] font-light tracking-[0.05em] text-gray-600 uppercase lg:min-w-[200px] lg:px-2"
  >
    {blok.title}
  </div>
  <div class="flex flex-col lg:gap-2">
    {blok.links.map((link) => <StoryblokComponent blok={link} />)}
  </div>
</div>
