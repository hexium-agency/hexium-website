---
import type { ImageStoryblok } from '@/types/storyblok';
import { parseStoryblokImage } from '@/utils/storyblok';
import { storyblokEditable } from '@storyblok/astro';
import { Image as AstroImage } from 'astro:assets';

interface AstroProps {
  blok: ImageStoryblok;
}

const { blok } = Astro.props as AstroProps;
---

<div {...storyblokEditable(blok)} class="tooooooz">
  <div class="rounded-2xl bg-white/15 shadow-[inset_0_0_2px_1px_#ffffff4d] ring-1 ring-black/5">
    <div class="rounded-2xl p-1.5 shadow-md shadow-black/5">
      <div
        class="overflow-hidden rounded-xl shadow-2xl outline-1 -outline-offset-1 outline-black/10"
      >
        <AstroImage
          sizes="(max-width: 767px) 80vw, 50vw"
          {...parseStoryblokImage(blok.image)}
          class="object-cover object-center"
        />
      </div>
    </div>
  </div>
</div>
