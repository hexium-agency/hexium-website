---
import type { SpacerStoryblok } from '@/types/storyblok';
import { storyblokEditable } from '@storyblok/astro';

interface AstroProps {
  blok: SpacerStoryblok;
}

const space: Record<string, string> = {
  '1': 'h-1',
  '2': 'h-2',
  '3': 'h-3',
  '4': 'h-4',
  '5': 'h-5',
  '6': 'h-6',
  '7': 'h-7',
  '8': 'h-8',
  '9': 'h-9',
  '10': 'h-10',
  '12': 'h-12',
  '14': 'h-14',
  '16': 'h-16',
  '18': 'h-18',
  '20': 'h-20',
};

const { blok } = Astro.props as AstroProps;
---

<div {...storyblokEditable(blok)} class={space[blok.space!]}></div>
