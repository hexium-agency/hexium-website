---
import ButtonBase from '@/components/button.astro';
import type { ButtonMeetingStoryblok } from '@/types/storyblok';
import { storyblokEditable } from '@storyblok/astro';

interface AstroProps {
  blok: ButtonMeetingStoryblok;
}

const { blok } = Astro.props as AstroProps;
---

<ButtonBase
  {...storyblokEditable(blok)}
  isArrowShowed={blok.isArrowShowed}
  color={blok.style}
  isMeeting={true}
  isBig={Boolean(blok.isBig)}
  className="w-full md:w-auto"
>
  {blok.title}
</ButtonBase>
