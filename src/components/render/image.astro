---
import { Image as AstroImage } from 'astro:assets';

interface AstroProps {
  src: string;
  alt: string;
  width: number;
  height: number;
}

const { src, alt, width, height } = Astro.props as AstroProps;
---

<AstroImage
  sizes="(max-width: 767px) 80vw, (max-width: 1279px) 50vw, 33vw"
  class="rounded-lg"
  src={src}
  alt={alt}
  width={width}
  height={height}
/>
